{

    "manifest_version": 2,
    "name": "GOG Reformatted",
    "version": "0.1.0",

    "description": "Reformats GOG.com first page.",
    "homepage_url": "https://github.com/vanchann/gog_reformatted.git",

    "icons": {
        "48": "/icons/evangelos_48.png",
        "96": "/icons/evangelos_96.png"
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "include_globs": ["*www.gog.com*"],
            "css": ["gog_reformatted.css"]
        }
    ]

}
